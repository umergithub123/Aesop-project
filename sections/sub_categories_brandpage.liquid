<div class="brand_page_categories">
<h1 class="page-width main_heading">{{ section.settings.heading }}</h1>
<div class="subcategories_brand_page">
{% for metaobject in page.metafields.custom.brandpage_image_nav.value  %}
 <a href="{{ metaobject.url }}"> 
   <img src="{% if metaobject.metafields.custom.secondary_img %}{{ metaobject.metafields.custom.secondary_img | img_url : 'small' }}{% else %}{{ metaobject.image | img_url : 'small' }}{% endif %}" loading="lazy">
   <h1>{{ metaobject.title }}</h1>
 </a>
{% endfor %}

</div>  
</div>
{% comment %}
<script>
  // Get the total number of 'A' tags within .subcategories_brand_page
  var numberOfTags = document.querySelector('.subcategories_brand_page').querySelectorAll('a').length;

  // Define the CSS styles based on the number of tags
  var gridStyles = `display: grid; grid-template-columns: repeat(${numberOfTags}, 1fr);`;
  var flexStyles = 'display: flex; flex-wrap: wrap;';

  // Check the number of tags and apply the needed styles
  var subcategoriesBrandPage = document.querySelector('.subcategories_brand_page');
  if (numberOfTags <= 6) {
    subcategoriesBrandPage.style.cssText = gridStyles;
    document.querySelectorAll('.subcategories_brand_page a').forEach((singleATag,i)=>{
      singleATag.style.width = '100%';
    })
  } else {
    subcategoriesBrandPage.style.cssText = flexStyles;
    document.querySelectorAll('.subcategories_brand_page a').forEach((singleATag,i)=>{
      singleATag.style.width = '16.6%';
    })
  }
</script>
{% endcomment %}
