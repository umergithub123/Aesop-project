{%- style -%}
  /*         My Rich Text        */
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    #shopify-section-template--20949801107748__main .myrich-text__wrapper {
      display:flex;
      justify-content: left;
      padding: 0;
      ;
  }
    #shopify-section-template--20949801107748__main .rte a {
    text-decoration: none;
  }
    #shopify-section-template--20949801107748__main .rte a:hover {
                  text-decoration:underline;

                }
   .logo-Privacy-Policy {
      position: absolute;
      top: 27%;
      left: 3.5%;
      transform: translate(-3.5%, -27%);
  }
    .mobile-logo {
       display:block;
  }
    .myrich-text {
    z-index: 1;
  }

  .myrich-text__wrapper {
    display: flex;
    ;
    justify-content: center;
    width: calc(100% - 4rem / var(--font-body-scale));
  }


  .myrich-text:not(.rich-text--full-width) {
    margin: auto;
    width: 65%;
  }

  .myrich-text__blocks {
    width: 100%;
  }
   .myrich-text.content-container {
    position: initial;
}
  @media screen and (min-width: 750px) {
    .myrich-text__wrapper {
      width: 100%;
    }


    .myrich-text__wrapper--left {
      justify-content: flex-start;
    }

    .myrich-text__wrapper--right {
      justify-content: flex-end;
    }

    .myrich-text__blocks {
      max-width: 50rem;
    }
  }

  @media screen and (min-width: 990px) {
    .myrich-text__blocks {
      max-width: 78rem;
    }
    .myrich-text_blocks_1 {
      max-width: 100%;
    }
  }

  .myrich-text__blocks * {
    overflow-wrap: break-word;
  }

  .myrich-text__blocks > * {
    margin-top: 0;
    margin-bottom: 0;
  }

  .myrich-text__blocks > * + * {
    margin-top: 2rem;
  }

  .myrich-text__blocks > * + a {
    margin-top: 3rem;
  }

  .myrich-text__buttons {
    display: inline-flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    width: 100%;
    max-width: 45rem;
    word-break: break-word;
  }

  .myrich-text__buttons--multiple > * {
    flex-grow: 1;
    min-width: 22rem;
  }

  .myrich-text__buttons + .rich-text__buttons {
    margin-top: 1rem;
  }

  .myrich-text__blocks.left .rich-text__buttons {
    justify-content: flex-start;
  }

  .myrich-text__blocks.right .rich-text__buttons {
    justify-content: flex-end;
  }
     @media screen and (max-width: 767px) {
  .myrich-text.content-container.color-background-1.gradient.myrich-text--full-width.content-container--full-width.section-template--21384068301092__74671ef0-9ebe-4b35-a0a9-48cb01795c4e-padding .myrich-text__wrapper {
    width: 93%!important;
    text-align: -webkit-auto;
    padding: 0!important;
    margin-left: 4% !important;
}
  section#shopify-section-template--21384068301092__74671ef0-9ebe-4b35-a0a9-48cb01795c4e .myrich-text:not(.rich-text--full-width) {
    width: 100%;
}
  .mobile-logo {
    display:none;
  }
     }
{%- endstyle -%}
{% comment %}
  My Rich Text
{% endcomment %}
<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="myrich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} myrich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="myrich-text__wrapper myrich-text__wrapper_home myrich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %}={% endif %}">
      <div class="myrich-text__blocks myrich-text_blocks_1 {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="myrich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.heading }}
              </h2>
            {% when 'logo' %}
              {% if block.settings.logo != blank %}
                <div class="logo-Privacy-Policy">
                  <a href="https://aesop-ae.myshopify.com">
                    <img
                      class="mobile-logo"
                      alt="{{ block.settings.logo.alt}}"
                      src="{{block.settings.logo | img_url: 'master' }}"
                    >
                  </a>
                </div>
              {% endif %}

            {%- when 'caption' -%}
              <p
                class="myrich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="myrich-text__text  rte{% if settings.animations_reveal_on_scroll %}  scroll-trigger animate--slide-in{% endif %} quote-{{ section.id }}-font"
                {{ block.shopify_attributes }}

                {{ block.settings.font_size }}

                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div
                class="myrich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>
